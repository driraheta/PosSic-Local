@page "{id}"
@model Sicsoft.Checkin.Web.Pages.Parametros.IndexModel
@{
    ViewData["Title"] = "Parametros";
}
@section Title{
    <h2><i></i> @ViewData["Title"]</h2>
}
@section breadcrumb{
    <li class="breadcrumb-item">
        <a asp-page="./Index">Parámetros</a>
    </li>

    <li class="breadcrumb-item active">
        <strong>Editar </strong>
    </li>
}
@section TitleAction{
    <a asp-page="/Index" class="nav-link text-dark"><i class="fa fa-arrow-circle-o-left "></i>  Regresar</a>
}
@section styles{
    <link rel="stylesheet" href="~/lib/summernote/summernote-bs4.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2-bootstrap4.min.css" />
    <link href="~/lib/dropzone/basic.css" rel="stylesheet" />
    <link href="~/lib/dropzone/dropzone.css" rel="stylesheet" />
    <link href="~/lib/iCheck/skins/square/green.css" rel="stylesheet" />
    <link href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/4.0.0/css/jasny-bootstrap.min.css">

}

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/dropzone/dropzone.js"></script>
    <script src="~/lib/iCheck/icheck.js"></script>

}

<form method="post" id="formTipos" role="form" novalidate class="needs-validation " enctype="multipart/form-data">
    <div class="ibox ">
        <div class="ibox-title">
            <h2>Información</h2>


        </div>
        <div class="ibox-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-3">

                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6" >

                            <label class="checkbox" style="text-decoration: none; font-size: 13px;">
                                Facturar exist. Negativas
                                <input type="checkbox"  id="check1" asp-for="Objeto.FacturaExistenciasNegativas" />
                                <span class="check"></span>
                            </label>
                        </div>
                      
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">

                            <label asp-for="Objeto.CodigoActividadEconomica" class="col-form-label">Código Actividad Económica:</label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Objeto.CodigoActividadEconomica" class="form-control">
                            <span asp-validation-for="Objeto.CodigoActividadEconomica" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">

                            <label asp-for="TC.TipoCambio1" class="col-form-label">Tipo de Cambio:</label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="TC.TipoCambio1" type="number" onchange="javascript: validaNegativos(event,'TC_TipoCambio1');" class="form-control">
                            <span asp-validation-for="TC.TipoCambio1" class="text-danger"></span>
                        </div>
                    </div>


                   

                </div>
                <div class="col-sm-3">

                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-w-m btn-primary" title="Guardar">Guardar Cambios</button>
    </div>
</form>