<div class="ibox">
    <div class="ibox-content">
        <form method="get">
            <h2>Filtros:</h2>

            <div>
                <div class="row">
                    <div class="col-sm-3">
                        <select asp-for="filtro.Codigo" id="CodProv" class="form-control  mi-selector">
                            <option value="NULL" selected>-Seleccione Cliente-</option>
                            @foreach (var item in Model.Clientes)
                            {
                                <option value="@item.CodCliente">@item.NomCliente</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-3">
