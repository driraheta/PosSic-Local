
@{
    ViewBag.Title = "Nuevo Equipamento";
    var CssVersion = System.Configuration.ConfigurationManager.AppSettings["CssVersion"];
    var JsVersion = System.Configuration.ConfigurationManager.AppSettings["JsVersion"];
}

<script type="text/javascript" src="~/Scripts/Views/Equipamentos/Create.js?@JsVersion"></script>
<style>
    label.error {
        top: 53px;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Equipamento</h2>
        <ol class="breadcrumb">
            <li class="breadcum-item">
                <a href="~/Home/Index">Home</a>
            </li>
            <li class="breadcum-item">
                <a href="#">Equipamento</a>
            </li>
            <li class="breadcum-item active">
                <strong>Nuevo</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<br />
<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-content">
            <form id="frmNuevoEquipamento" role="form" action="#" class="m-t">
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">Código Equipamiento:</label>
                        </div>
                        <div class="col-sm-6">
                            <input id="idCodigoEquipamento" minlength="2" name="idCodigoEquipamento" type="text" required="" placeholder="Código de Equipamento" disabled class="form-control" />
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">Nombre Equipamiento:</label>
                        </div>
                        <div class="col-sm-6">
                            <textarea style="resize: none" id="idNombreEquipamento" required=""  class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>
                <br />
            </form>
            <div class="row">
                <div class="col-sm-8" style="text-align: right">
                    <button onclick="javascript: ValidateGuardaEquipamento();" type="button" class="btn btn-w-m btn-primary">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>
</div>